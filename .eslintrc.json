{
  "parser": "babel-eslint",
  "plugins": ["react", "prettier", "standard"],
  "extends": [
    "plugin:react/recommended",
    "prettier",
    "prettier/react",
    "prettier/standard"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "rules": {
    "prettier/prettier": "error",
    "eqeqeq": ["error", "always"],
    "space-before-function-paren": 0,
    "generator-star-spacing": 0,
    "react/prop-types": 0,
    "react/display-name": 0,
    "react-in-jsx-scope:": 0,
    "react/react-in-jsx-scope": "off"
  }
}
